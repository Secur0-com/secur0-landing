---
import Companies from "../components/Companies.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Title from "../components/Title.astro";
import Faq from "../components/Faq.astro";
import Layout from "../layouts/Layout.astro";
import RotatingText from "../components/react/RotatingText.jsx";
import arrowImage from "../assets/arrow.svg";
import { Image } from "astro:assets";
import "../styles/global.css";
import Steps from "../components/Steps.astro";
import Card from "../components/Card.astro";
import Video from "../components/Video.astro";

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout>
	<div class="flex flex-col gap-24 max-w-[1280px] mx-auto">
		<section
			class="h-[calc(100lvh - 5rem)] min-h-[690px] flex flex-col items-center gap-26 sm:gap-24 lg:gap-30"
		>
			<Header />
			<h1
				class="flex flex-col lg:flex-row gap-2 sm:gap-5 items-center text-6xl sm:text-7xl text-white font-light sm:mt-10"
			>
				Hackea con <RotatingText
					client:load
					texts={[
						"responsabilidad",
						"impacto",
						"recompensas",
						"reconocimiento",
						"Secur0",
					]}
					mainClassName="text-5xl sm:text-7xl backdrop-blur-2xl bg-(--card-bg-dark) border-1 border-(--card-border) text-white font-semibold overflow-hidden py-1 sm:py-2.5 px-2 sm:px-4 justify-center rounded-xl"
					staggerFrom={"last"}
					initial={{ y: "100%" }}
					animate={{ y: 0 }}
					exit={{ y: "-120%" }}
					staggerDuration={0.025}
					splitLevelClassName="overflow-hidden pb-0.5 sm:pb-1 md:pb-1"
					transition={{ type: "spring", damping: 30, stiffness: 400 }}
					rotationInterval={2000}
				/>
			</h1>
			<p
				class="text-gray-300 max-w-[350px] sm:max-w-[500px] text-center text-base sm:text-2xl font-normal"
			>
				Hackea en entornos reales y obtén recompensas.
			</p>
			<div class="flex flex-row items-center gap-6">
				<a
					href="mailto:javier@secur0.com"
					class="flex items-center gap-2 px-4 py-2 rounded-full bg-white cursor-pointer"
				>
					Contact us <Image src={arrowImage} alt="Arrow right" />
				</a>
				<a
					href="#for-hackers"
					class="flex items-center gap-2 px-4 py-2 rounded-full text-white cursor-pointer"
				>
					Learn more <Image
						src={arrowImage}
						alt="Arrow right"
						class="rotate-90 invert opacity-80"
					/>
				</a>
			</div>
			<Companies />
		</section>
		<Title
			id="for-hackers"
			tag="for hackers"
			title="What you can do with us"
			description="These are the tings a hacker like <strong>you</strong> would like on a platform like <strong>ours</strong>."
		>
			<div class="flex flex-wrap gap-4 w-full text-white max-w-[420px] md:max-w-[700px] lg:max-w-[900px]">
				<Card extras="w-full sm:w-[calc(60%-0.5rem)]" title="Hack real companies <strong>legally</strong>" description="Test your knowledge on real companies, with real vulnerabilities." />
				<Card extras="w-full sm:w-[calc(40%-0.5rem)]" title="Earn <strong>money</strong>" description="Companies pay for the vulnerabilities you find." />
				<Card extras="w-full sm:w-[calc(40%-0.5rem)]" title="<strong>Certify</strong> your findings" description="Improve your resume with certifications of the vulnerabilities you find." />
				<Card extras="w-full sm:w-[calc(60%-0.5rem)]" title="<strong>Quick</strong> launch" description="" />
			</div>
		</Title>
		<Title
			id="our-community"
			tag="our community"
			title="The content of our community"
			description="This content is made by our community, free to use and share."
		>
			<div class="flex justify-center gridgrid-cols-1 md:grid-cols-2 gap-4 w-full text-white max-w-[420px] md:max-w-[700px] lg:max-w-[900px]">
				<Video
					title="Bug Hunting Minimalista: Impacto Máximo con Herramientas Básicas"
					description="En esta charla exploraremos cómo desarrollar una mentalidad estratégica para identificar vulnerabilidades en programas de bug bounty."
					videoId="s9gATBB0kog"
					authorLink="https://www.linkedin.com/in/pedrojosenavasperez/"
					author="Pnavas"
				/>
